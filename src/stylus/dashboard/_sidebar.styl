.Sidebar
    float left
    width 200px

    @media Tablet
        display none

    ul
        resetList()
        position relative
        z-index 100

        li
            fontSize(14px)
            height 40px
            line-height 40px
            position relative
            text-indent 40px

            a
                &.module
                    color $lightGray
                    display block
                    text-decoration none
                    text-indent 50px
                    width 100%
                &.create
                    position(absolute, 0px, 10px)
                    color $lightGray

            &:hover
                background-color $headerDarkBlue

            &.dashboardIcon
                &::before
                    icon('f0e4', $lightGray, 1em, 0px, 0px, -20px)
            &.adsIcon
                &::before
                    icon('f0a1', $lightGray, 1em, 0px, 0px, -20px)
            &.blogIcon
                &::before
                    icon('f02d', $lightGray, 1em, 0px, 0px, -20px)
            &.configIcon
                &::before
                    icon('f013', $lightGray, 1em, 0px, 0px, -20px)
            &.feedbackIcon
                &::before
                    icon('f0e0', $lightGray, 1em, 0px, 0px, -20px)
            &.pagesIcon
                &::before
                    icon('f1ea', $lightGray, 1em, 0px, 0px, -20px)
            &.pollsIcon
                &::before
                    icon('f0f6', $lightGray, 1em, 0px, 0px, -20px)
            &.usersIcon
                &::before
                    icon('f0c0', $lightGray, 1em, 0px, 0px, -20px)
            &.logoutIcon
                &::before
                    icon('f0a5', $lightGray, 1em, 0px, 0px, -20px)

    .credits
        fontSize(12px)
        color $white
        text-align center
